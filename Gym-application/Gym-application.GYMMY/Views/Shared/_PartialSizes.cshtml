            <input asp-for="Sizes.Fat" class="form-control form-control-sm" />
            <span asp-validation-for="Sizes.Fat" class="text-danger"></span>
        </div>
    </div>
<div class="row sizes mx-auto">
    <img class="mx-auto"  src="~/images/model.jpg" />
    <input asp-for="Sizes.Biceps" class="form-control form-control-sm" id="biceps_input" />
    <span asp-validation-for="Sizes.Biceps" class="text-danger"></span>   
    <input asp-for="Sizes.Chest" class="form-control form-control-sm" id="chest_input" />
    <span asp-validation-for="Sizes.Chest" class="text-danger"></span>
    <input asp-for="Sizes.Forearm" class="form-control form-control-sm" id="forearm_input" />
