    <input asp-for="Sizes.Thigh" class="form-control form-control-sm" id="thigh_input" />
    <span asp-validation-for="Sizes.Thigh" class="text-danger"></span>
    <input asp-for="Sizes.Waist" class="form-control form-control-sm" id="waist_input" />
    <span asp-validation-for="Sizes.Waist" class="text-danger"></span>
</div>

